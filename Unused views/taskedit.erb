<div class="container">
    <form action="/tasks/<%= @task.id %>" method="post">
        <div class="controls">
            <div class="form-group">
                <input type="text" name="title" placeholder="Title" value="<%= CGI.escapeHTML(@task.title) %>" class="form-control input-lg"><br>
                <input type="text" name="page" placeholder="Page" value="<%= @task.page%>" class="form-control input-lg"><br>
                リスト：
                <select name="cat" class="form-control">
                    <% Cat.all.each do |cat| %>
                        <option value="<%= cat.id %>"
                            <% if cat.id == @task.cat_id %>
                                selected
                            <% end %>>
                                <%=cat.name%>
                        </option>
                    <% end %>
                </select>
            </div>
            <div class="form-group col-lq-4">
                <input class="form-control col-lq-4" type="submit" value="登録">
            </div>
        </div>
    </form>
</div>