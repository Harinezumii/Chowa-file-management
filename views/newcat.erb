<div class="containerbox">
<div class="box4 yellow"></div>
<h1 class="text" style="font-family: 'Open Sans', sans-serif; font-size:40px;"><font color="#181818"><center>ADD NEW CATEGORY</center></font></h1>
<div class="form-group" style="text-align:center;">
<div class="form-group col-lq-4">
    <form action="/tasks/newcat" method="post">
        <input type="text" name="title" placeholder="TITLE" class="form-control input-lg" style="font-family:Courier New, Courier, monospace;" required><br>
        <input class="form-control" style="font-family: 'Righteous', cursive;color:#181818" type="submit" value="Add" >
    </form>
</div>
</div>

<div class="box5 yellow"></div>
<h1 class="text" style="font-family: 'Open Sans', sans-serif; font-size:40px;"><font color="#181818"><center>DELETE CATEOGIRES</center></font></h1>

<table class="table table-striped table-bordered table-hover" style="background-color: ##111214;" style="font-family:Trebuchet MS, Helvetica, sans-serif">

    <thead>
        <tr class="tableback">
            <th style="font-family:Trebuchet MS, Helvetica, sans-serif; color:#1A1A1A;">Title</th>
            <th style="font-family:Trebuchet MS, Helvetica, sans-serif; color:#1A1A1A;">Delete</th>
        </tr>
    </thead>
<% @cats.each do |cat| %>
    <tr class="tableback">
    <tbody>
        <td style="font-family:Trebuchet MS, Helvetica, sans-serif;color:#1A1A1A"><%= cat.name %></td>
        <td>
            <form action="/tasks/<%= cat.id %>/deletecat" method="post">
                <font color="#1A1A1A"><input type="submit" value="Delete"></font>
            </form>
        </td>
    </tbody>
    </tr>
<% end %>
</table>

<div class="box6 yellow"></div>
<h1 class="text" style="font-family: 'Open Sans', sans-serif; font-size:40px;"><font color="#181818"><center>REGISTERED YEARS</center></font></h1>


<table class="table table-striped table-bordered table-hover" style="background-color: ##111214;" style="font-family:Trebuchet MS, Helvetica, sans-serif">

<thead>
<tr class="tableback">
    <th style="font-family:Trebuchet MS, Helvetica, sans-serif; color:#1A1A1A;">Title</th>
    <th style="font-family:Trebuchet MS, Helvetica, sans-serif; color:#1A1A1A;">Password</th>
    <th style="font-family:Trebuchet MS, Helvetica, sans-serif; color:#1A1A1A;">Delete</th>
</tr>
</thead>

<% @users.each do |user| %>
    <tr class="tableback">
    <tbody>
        <td style="font-family:Trebuchet MS, Helvetica, sans-serif;color:#1A1A1A"><%= user.name %></td>
        <td style="font-family:Trebuchet MS, Helvetica, sans-serif;color:#1A1A1A"><a href="/tasks/<%= user.id %>/edituser"><%= user.pass %><a></td>
        <td>
        <form onSubmit="return confirm('Delete year? This process is irreversible and all data within this year will be lost.');" action="/tasks/<%= user.id %>/deleteuser" method="post">
            <font color="#1A1A1A"><input type="submit" value="Delete"></font>
        </form>
        </td>
    </tbody>
    </tr>


<% end %>

</table>

